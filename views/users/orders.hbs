


<div class="container mt-3">

<h2>Your Orders</h2>
 {{#each products}}
  <div class="row border col-lg mt-4 mb-4 " >
    <div class="col-lg-4">
        <img class="card-img-top" src="/images/{{this._doc.product_crypto_id}}.jpg" style="width: 18rem;" class="img-thumbnail" alt="Card image cap">

    </div>
  <div class="card-body pt-5 col-lg-4">
    <h3 class="card-title">{{this._doc.productName}}</h3>
    <h4 class="card-title pt-4">Quantity : {{this._doc.productCount}}</h4>
    <h4 class="card-title pt-5">Expect Delivery By : 1 Jun</h4>
   </div>
   <div class="p-5 col-lg-4 text-right ">
    <div >
          <button class="btn btn-warning">Edit Order</button>

    </div>
    <div class="mt-3">
          <button class="btn btn-success" >Cancel Order</button>
</div>

   </div>
</div>
{{/each}}
</div>
